# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aidflow
DB_USER=postgres
DB_PASSWORD=your_password_here

# Stellar Network Configuration
STELLAR_NETWORK=testnet
# For testnet:
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# For mainnet (production):
# STELLAR_HORIZON_URL=https://horizon.stellar.org
# STELLAR_NETWORK_PASSPHRASE=Public Global Stellar Network ; September 2015

# Platform Master Account (for issuing operations)
PLATFORM_SECRET_KEY=your_secret_key_here
PLATFORM_PUBLIC_KEY=your_public_key_here

# Multi-sig Signers (for treasury management)
SIGNER_1_SECRET=signer1_secret_key
SIGNER_2_SECRET=signer2_secret_key
SIGNER_3_SECRET=signer3_secret_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# API Keys
HORIZON_API_KEY=optional_api_key
ANCHOR_API_KEY=optional_anchor_key

# Compliance
ENABLE_KYC=true
CHAINALYSIS_API_KEY=optional_compliance_key

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
